{% extends 'base.html.twig' %}

{% block title %}List des continents{% endblock %}

{% block h1 %}List des continents{% endblock %}
{% block body %}
    {% for continent in continents %}
        <h2><a href="{{ path('continent', {'id': continent.id }) }}">{{ continent.label }}</a></h2>
        <div class="row align-items-center">
            {% for animal in continent.animals %}
                <div class="col-6 mb-1">
                    <div class="row align-items-center text-center">
                        <div class="col-12 col-md-6 col-2">
                            <img src="{{ asset('images/' ~ animal.image) }}" class="img-fluid">
                        </div>
                        <div class="col text-center">
                            <h2>
                                <a href="{{ path('animal', {'id': animal.id}) }}">{{ animal.name }}</a>
                            </h2>
                            <div>{{ animal.description }}</div>
                            <div><a href="{{ path('family', {'id': animal.family.id }) }}" class="btn btn-primary">{{ animal.family.label }}</a></div>
                        </div>
                    </div>
                </div>
            {% endfor %}
        </div>
        <hr>
    {% endfor %}
{% endblock %}
